<h1>Sign In</h1>

<%= form_tag login_path do %>
  <div class="">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :placeholder => 'name@gmail.com' %>
  </div>

  <div class="">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil %>
  </div>

  <%= submit_tag 'Log in' %>
<% end %>
